echo -n "Enter Ftp User Name > ";read text;UIFTP=$text;
echo -n "Enter Ftp Root Directory Path (Example:/root) > ";read text;PFTP=$text;
echo -n "Enter System Username(Example: root,daemon) > ";read text;USER=$text;

u_gid=$(id -g $USER)
u_uid=$(id -u $USER)

# Check if user exists
if ! id -u $USER > /dev/null 2>&1; then
echo -n "System User name not found please check in /etc/passwd file and retry > ";
    echo "The user does not exist; execute below commands to crate and try again:"
    echo "  root@sh1:~# adduser --home /usr/local/freeswitch/ --shell /bin/false --no-create-home --ingroup daemon --disabled-password --disabled-login $USER"
    echo "  ..."
    echo "  root@sh1:~# chown freeswitch:daemon /usr/local/freeswitch/ -R"
    exit 1
    else
    echo "System User is $USER exist"
fi

echo -n "Enter Ftp Password > ";
ftpasswd --passwd --file /etc/proftpd/passwd.vhosts --sha512 --gid $u_gid --uid $u_uid --shell /sbin/nologin --name $UIFTP  --home  $PFTP
